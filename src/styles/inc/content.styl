h1
h2
h3
h4
h5
h6
    color $heading-color
    font(Bold)
    margin 1.2em 0 0.5em
    line-height normal

h1
    font-size 2.6em

h2
    font-size 2.3em

h3
    font-size 2em

h4
    font-size 1.8em

h5
    font-size 1.4em

h6
    font-size 1.2em

p
    color $base-text-color
    font()
    font-size 16px
    line-height 25px
    margin 0 0 20px
    +above(1152px)
        font-size 18px
        line-height 30px
        margin 0 0 35px

a
    color $link-color
    transition color 0.2s ease 0s
    text-decoration underline

    &:hover
        text-decoration none
        color $link-hover-color

img
    max-width 100%
    height auto

i
em
    font-style italic

b
strong
    font(Bold)

ol
ul
    list-style-position inside
    padding-left 2em

ul
    list-style-type disc

ol
    list-style-type decimal

dt
dd
    line-height 22px

dt
    font(Bold)

dd
    margin-left 0 //- Undo browser default

pre
code
    font-family $fixed-font-family
    font-size $fixed-font-size
    line-height $fixed-line-height

    overflow hidden
    white-space -moz-pre-wrap
    white-space -o-pre-wrap
    white-space -pre-wrap
    white-space pre-wrap
    word-wrap break-word
    tab-size 4

pre
    padding 1em
    background #eee
    border-radius 3px

q
    quotes "«" "»"
    font-style italic

    q
        quotes "„" "“"
        font-style italic

blockquote
    padding 11px
    margin 0 0 22px
    border-left 5px solid #eee

    p
    ul
    ol
        &:last-child
            margin-bottom: 0

        &:first-child
            margin-top 0

    footer
    small
        display block
        font-size 80%
        line-height 1.2

        &:before
            content '\2014 \00A0' //- em dash, nbsp

hr
    display block
    height 1px
    border 0
    border-top 1px solid #ccc
    margin 1em 0
    padding 0


.center
    text-align center

.intro
    color #231f20
    font(Light)
    font-size 18px
    line-height 30px
    margin 0 0 20px
    +above(1152px)
        font-size 24px
        line-height 40px
        margin 0 0 45px
    &--bold
        font(Bold)

.title
    color #231f20
    font(Extra)
    font-size 30px
    line-height 35px
    margin 0 0 20px
    +above(1152px)
        font-size 42px
        line-height 55px
        margin-top 100px
        margin-bottom 50px
    &--center
        text-align center
    &--no-top
        +above(1152px)
            margin-top 0
    &--history
        color #faa926
        font(Light)
        font-size 60px
        line-height 1
        text-align center
        margin 0 0 40px
        +above(1152px)
            font-size 90px
            margin-bottom 65px

.image-framed
    border 10px solid #f4f4f4
    +above(1152px)
        border-width 20px
    &--white
        border-color white

.subtitle
    color #231f20
    font(Bold)
    font-size 20px
    line-height 25px
    +above(1152px)
        font-size 24px
        line-height 35px


.clear
    clear both

.clearfix
    cf()

.text-muted
    &
    & > *
        color $base-quiet-color


.content-wrapper
    img[align="left"]
    img[style*="float: left"]
    img[style*="float:left"]
        margin 5px 15px 0px 0px

    img[align="right"]
    img[style*="float: right"]
    img[style*="float:right"]
        margin 5px 0px 0px 15px

.align-image-center
    text-align center

.align-image-left
    float left
    margin 5px 15px 0px 0px

.align-image-right
    float right
    margin 5px 0px 0px 15px

.image-captioned
    margin-bottom 20px
    +below(375px)
        margin-left 0
        margin-right 0
        float none
        width 100%
        height auto
        display block

    figcaption
        font-style oblique
        font-size 1em
        color #454545


.align-image-left
.align-image-right
.align-image-center img
    +below(375px)
        margin 0
        float none
        width 100%
        height auto
        display block

// Add this class to an image to make it fit within it's fluid parent wrapper while maintaining
// aspect ratio.

.fluid-image
    max-width 100%
    height auto
    display block

.hide-mobile
    +below(1151px)
        display none

.hide-desktop
    +above(1152px)
        display none

.bg-grey
    background-color #f4f4f4

.divider
    display block
    width 100%
    height 30px
    margin 0
    +above(1152px)
        height 140px
        width 2px
        background-color #e5e5e5
        margin 70px auto 75px
