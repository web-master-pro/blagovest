html
    box-sizing border-box
    height 100%
    margin 0

*, *:before, *:after
    box-sizing inherit

body
    color #333
    font()
    font-size 16px
    line-height 1
    background-color #fff
    min-width 300px
    height 100%
    position relative
    left 0
    overflow-x hidden
    overflow-y scroll
    -webkit-font-smoothing subpixel-antialiased !important
    -webkit-backface-visibility hidden
       -moz-backface-visibility hidden
        -ms-backface-visibility hidden

    &:after
        display table
        clear both
        content ""

.hidden
    display none

a, input, *:focus
    outline none



.animated
    animation-duration 1s
    animation-fill-mode both


@keyframes zoomIn
    from
        opacity 0
        transform scale3d(.3, .3, .3)

    50%
        opacity 1

.zoomIn
    animation-name zoomIn

