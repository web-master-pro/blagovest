.table
    width 100%
    border-spacing 0
    border-collapse collapse
    border 0
    &__header
        color white
        background-color #1a4382
    &__th
        color white
        font(Bold)
        font-size 18px
        line-height 1
        text-align left
        padding 25px 0
        &:nth-child(1)
            width 110px
            text-align center
        &:nth-child(2)
            width 220px
        +below(991px)
            display none

    // &__body
    //     background-color #fff

    &__row
        background-color #fff
        border-bottom 1px solid #f4f4f4
        +below(991px)
            display block
            margin-bottom 20px
            border-bottom 1px solid #f4f4f4

    &__col
        padding-left 20px
        &:nth-child(1)
            +sbove(992px)
                text-align center
                padding-left 0
        +below(991px)
            display block
            padding 20px
            &:first-child
                color white
                background-color #1a4382
            &:last-child
                padding-top 0


    &__title
        color #231f20
        font(Bold)
        font-size 15px
        line-height 1.2
        margin-bottom 10px
        +above(992px)
            display none
        +below(991px)
            ^[0]__col:first-child &
                display inline-block
                color white
                margin-bottom 0


    &__value
        color #231f20
        font()
        font-size 15px
        line-height 1.2
        padding 0
        padding 25px 0
        +below(991px)
            padding 0
            margin 0
            ^[0]__col:first-child &
                display inline-block
                color white

