.ceremonies
    width 100%
    display flex
    flex-flow row wrap
    justify-content space-around
    +above(1190px)
        justify-content space-around

    & .ceremony
        flex 0 0 auto
.ceremony
    display block
    width 280px
    height 300px
    background-color #fff
    // padding 230px 10px 0px
    overflow hidden
    position relative
    margin 0 0 20px
    +above(1152px)
        width 370px
        height 380px
        margin 0 0 30px

    &__pic
        display block
        width 260px
        height 220px
        position absolute
        top 10px
        left 10px
        background-position center center
        background-size cover
        background-repeat no-repeat
        transition all .5s ease

        ^[0]:hover &
            height 280px
            &::before
                content ""
                display block
                position absolute
                top 0
                left 0
                right 0
                bottom 0
                z-index 10
                background-color #1a4382
                opacity .8
        +above(1152px)
            top 20px
            left 20px
            width 330px
            height 280px
            ^[0]:hover &
                height 340px

    &__caption
        position absolute
        width 260px
        height 270px
        left 10px
        right 10px
        top 230px
        transition all .5s ease
        ^[0]:hover &
            top 20px
        +above(1152px)
            left 20px
            top 300px
            width 330px
            height 330px
            ^[0]:hover &
                top 30px

    &__title
        color #231f20
        font(Bold)
        font-size 20px
        line-height 25px
        margin 0
        text-align center
        width 100%
        height 70px
        display flex
        flex-flow row nowrap
        justify-content center
        align-items center
        position relative
        z-index 50
        padding 0 5px
        +above(1152px)
            font-size 24px
            line-height 30px
            height 80px

    &__link
        display inline
        color #231f20
        text-decoration none
        background-image linear-gradient(to bottom, #faa926 50%, rgba(0,0,0, 0) 50%)
        background-repeat repeat-x
        background-position 0 92%
        background-size 2px 4px
        ^[0]:hover &
            color white
        &:hover
            text-decoration none

    &__text
        color white
        font()
        font-size 15px
        line-height 20px
        padding 0 20px
        margin 0
        position relative
        z-index 50
        opacity 0
        transition opacity 1.5s ease
        +above(1152px)
            font-size 16px
            line-height 25px
            padding 0 30px
        ^[0]:hover &
            opacity 1


