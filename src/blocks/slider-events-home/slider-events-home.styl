.slider-events-home
    display block
    width 100%
    position relative

    &__slider
        width 100%
        position absolute
        top 0
        left 0
        right 0
        bottom 0

    &__slide
        width 100%
        height 400px
        background-repeat no-repeat
        background-position center center
        background-size cover
        z-index 200
        +above(480px)
            display flex
            flex-flow row nowrap
            justify-content center
            align-items center
        +above(1152px)
            height 680px

    &__in
        container(1210px)
        padding 50px 20px
        min-height 400px
        z-index 150
        +above(1152px)
            height 680px

    &__prev
        position absolute
        top 50%
        margin-top -36px
        left 20px
        z-index 150
        +below(1151px)
            top auto
            margin-top 0
            bottom 20px

    &__next
        position absolute
        top 50%
        margin-top -36px
        right 20px
        z-index 150
        +below(1151px)
            top auto
            margin-top 0
            bottom 20px

    &__captions
        container(1170px)
        padding 40px 20px
        animate-slide()
        +above(480px)
            padding 0 20px
        +above(1152px)
            padding 0 150px


    &__caption
        color white
        font(Bold)
        font-size 30px
        line-height 35px
        text-align center
        margin 0 0 15px
        +above(1152px)
            font-size 42px
            line-height 55px

    &__time
        display block
        color white
        font()
        font-size 18px
        line-height 20px
        text-align center
        margin 0 0 10px
        +above(1152px)
            margin-bottom 15px

    &__address
        display block
        color #faa926
        font(PTSans)
        font-size 15px
        line-height 25px
        text-align center
        margin 0

    &__nav
        display block
        left 0
        right 0
        position absolute
        bottom 8px
        height auto
        z-index 100
        +above(1152px)
            display none

    &__dots
        position relative
        width 100%
        display block
        list-style none
        padding 20px 50px
        margin 0 auto
        font-size 0
        text-align center

    &__dot
        display inline-block
        vertical-align middle
        width 6px
        height 6px
        background-color #fff
        border-radius 50%
        margin 15px
        cursor pointer
        transition background-color .3s ease
        &.active
            background-color #f3a62d
        &:hover
            +above(desktop)
                background-color #f3a62d

    &__extra
        display none
        width 100%
        height 100px
        position absolute
        bottom 45px
        +above(1152px)
            display flex
            flex-flow row nowrap
    &__event
        flex 0 0 33.333%
        text-align center
        padding 0 20px

    &__event-date
        opacity 0.4
        color white
        font(Bold)
        font-size 15px
        line-height 1
        text-align center
        margin 0 0 15px

    &__event-theme
        color white
        font()
        font-size 15px
        font-weight 400
        line-height 25px
        text-align center
        margin 0 0 20px

    &__event-loader-1
    &__event-loader-2
    &__event-loader-3
        display none

