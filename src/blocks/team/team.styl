.team
    &__in
        container(810px)
        padding 40px 20px
        display flex
        flex-flow row wrap
        justify-content space-between
        +above(1152px)
            padding 100px 20px 80px

    &__branch
        display none
        &.active
            display block

    &__title
        flex 0 0 100%
        color #231f20
        font(Extra)
        font-size 30px
        line-height 35px
        margin 0 0 20px
        +above(1152px)
            font-size 42px
            line-height 55px
            margin-bottom 50px

    &__item
        flex 0 0 48%

    &__photo
        margin-bottom 20px
        display block
        max-width 100%
        height auto

    &__name
        color #231f20
        font(Bold)
        font-size 16px
        line-height 20px
        margin 0 0 10px
        +above(1152px)
            font-size 24px
            line-height 30px
            padding-left 20px

    &__position
        color #848484
        font(PTSans)
        font-size 15px
        line-height 20px
        margin 0 0 15px
        +above(1152px)
            padding-left 20px

    &__descr
        display none
        +above(1152px)
            display block
            color #231f20
            font()
            font-size 15px
            line-height 25px
            padding-left 20px

