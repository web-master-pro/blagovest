.media-list
    container(1210px)
    padding 30px 20px 80px
    text-align center
    +above(1152px)
        padding 70px 20px 140px

    &__button-wrapper
        text-align center
    &__button
        margin-top 20px
        +above(1152px)
            margin-top 80px

.media
    display inline-block
    vertical-align top
    width 100%
    background-color #fff
    margin 0 auto 20px
    text-align left
    position relative
    +above(480px)
        max-width 370px
        margin 0 10px 20px
    +above(1152px)
        max-width 100%
        height 280px
        margin-bottom 30px

    &__video
        width 100%
        height auto
        +above(1152px)
            width 370px
            height 280px

    &__links
        position absolute
        top 0
        right 0

    &__headers
        display block
        padding 20px
        +above(1152px)
            width 660px
            position absolute
            top 55px
            left 430px
            padding 0 20px 0 0
        +above(1170px)
            left 450px

    &__title
        color #231f20
        font(Bold)
        font-size 20px
        line-height 25px
        margin 0 0 10px
        +above(1152px)
            font-size 24px
            line-height 35px

    &__time
        color #848484
        font()
        font-size 15px
        line-height 20px
        margin 0

    &__authors
        display none
        width 660px
        height 70px
        position absolute
        bottom 55px
        +above(1152px)
            display block
            left 430px
        +above(1170px)
            left 450px

.media-author
    display inline-block
    vertical-align top
    width 325px
    height 70px
    position relative
    margin 0

    &__photo
        width 70px
        height 70px
        position absolute
        top 0
        left 0
    &__name
        color #231f20
        font()
        font-size 18px
        line-height 20px
        position absolute
        top 10px
        left 90px
        right 20px
        margin 0
    &__position
        color #848484
        font(PTSans)
        font-size 15px
        line-height 20px
        position absolute
        top 40px
        left 90px
        right 20px
        margin 0



.media-links
    list-style none
    padding 0
    margin 0
    display block
    width 70px
    border-left 1px solid #f4f4f4
    display none
    +above(1152px)
        display block

    &__item
        display block
        width 100%
        height 70px
        padding 0
        margin 0
        border-bottom 1px solid #f4f4f4
        color #c4c4c4
        font(Extra)
        font-size 15px
        letter-spacing .025em
        line-height 70px
        text-align center
        text-transform uppercase
        position relative

    &__link
        color #231f20
        text-decoration none
        line-height 70px
        text-align center
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        transition all .3s ease
        &:hover
            color white
            background-color #faa927
            text-decoration none

        ^[0]__item:first-child &
            background-color #fbfbfb
            background-position 50% 50%
            background-repeat no-repeat
            background-size 26px 25px
            background-image embedurl("../../svg/download.svg", "")
            &:hover
                background-color #faa927
                background-image embedurl("../../svg/download-hover.svg", "")
