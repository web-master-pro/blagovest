.menu-category
    display inline-block
    position relative
    width 100%
    +above(480px)
        max-width 300px

    &__button
        display block
        width 100%
        height 60px
        background-color #1a4382
        border none
        outline none
        color white
        font(Extra)
        font-size 15px
        letter-spacing .025em
        line-height 62px
        text-transform uppercase
        text-align left
        text-decoration none
        padding 0
        position relative
        cursor pointer
        &::before
        &::after
            content ""
            display block
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            transition opacity .3s ease
        &::before
            opacity 1
            background-image linear-gradient(135deg, #387fc0 0%, #1f4388 100%)
        &::after
            opacity 0
            background-image linear-gradient(135deg, #14beeb 0%, #1c77bc 100%)
        &:hover
        ^[0].on &
            color white
            text-decoration none
            &::before
                opacity 0
            &::after
                opacity 1
        +above(1152px)
            height 40px
            line-height 42px

    &__caption
        display block
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        text-align left
        padding 0 30px 0 20px
        position relative
        z-index 2
        &::after
            content ""
            display block
            width 7px
            height 7px
            border-right 2px solid #fff
            border-bottom 2px solid #fff
            transform rotate(45deg)
            position absolute
            top 25px
            right 15px
        ^[0].on &
            &::after
                transform rotate(-135deg) translate(-2px,-3px)
        +above(1152px)
            &::after
                top 15px

    &__default
        display none
        +above(1152px)
            display inline
    &__current
        display inline
        +above(1152px)
            display none

    &__menu
        display none
        width 100%
        list-style none
        padding 0
        margin 0
        position absolute
        top 60px
        z-index 500
        background-color white
        box-shadow 0 1px 35px rgba(2, 2, 2, 0.2)
        +above(1152px)
            top 40px

    &__item
        display block
        width 100%
        margin 0
        padding 0
        text-align left
        background-color #231f20
        box-shadow inset 0 -1px 0 rgba(255, 255, 255, 0.05)

    &__link
        display block
        width 100%
        min-height 60px
        color #fff
        font(Extra)
        font-size 15px
        letter-spacing .025em
        line-height 20px
        text-transform uppercase
        text-decoration none
        padding 20px 20px
        &:hover
            color #faa927
            background-color #2b2627
            text-decoration none
        +above(1152px)
            min-height 40px
            padding 12px 20px


    &__img
        display block
        width 100%
        height auto
        +above(1152px)
            display none


