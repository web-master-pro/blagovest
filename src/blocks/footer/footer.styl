.footer
    overflow hidden
    background-color #1a4382
    background-image linear-gradient(135deg, #387fc0 0%, #1f4388 100%)

    &__top
        +above(1152px)
            border-bottom 1px solid rgba(255,255,255,.06)

    &__top-in
        container(1210px)
        height 90px
        +above(1152px)
            height 250px

    &__social
        position absolute
        top 50%
        transform translateY(-50%)
        left 20px

    &__logo
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)

    &__subscribe
        position absolute
        top 50%
        transform translateY(-50%)
        right 20px

    &__main
        display none
        +above(1152px)
            container(1210px)
            padding 54px 20px 23px
            display flex
            flex-flow row nowrap
            justify-content space-between

    &__col
        flex 0 0 25%
        position relative
        padding-right 50px

    &__email
    &__phone
        position absolute
        left 0
        bottom 5px

    &__button
        width 165px
        position absolute
        left 0
        bottom 10px
        margin 0

    &__bottom
        container(1190px)
        display flex
        flex-flow row wrap
        padding 10px 20px 20px
        +above(1152px)
            padding 40px 20px

    &__copyright
        color rgba(255,255,255,.25)
        font()
        font-size 14px
        line-height 20px
        margin 0
        flex 0 0 100%
        text-align center
        margin 0 0 20px
        br
            display none
        +above(1152px)
            font-size 15px
            line-height 25px
            flex 0 1 75%
            text-align left
            margin 0
            br
                display inline

    &__developed
        color #748bb6
        font()
        font-size 14px
        line-height 20px
        margin 0
        flex 0 0 100%
        text-align center
        +above(1152px)
            font-size 15px
            line-height 25px
            flex 0 1 25%
            text-align left

        a
            color white
            transition color .3s ease
            text-decoration none
            &:hover
                color $color_hover
                text-decoration none



