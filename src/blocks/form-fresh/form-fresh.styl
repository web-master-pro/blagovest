.form-fresh
    padding 0
    &__title
        color #231f20
        font(Bold)
        font-size 20px
        line-height 25px
        margin 0 0 10px
        +above(1152px)
            font-size 24px
            line-height 35px
            margin-bottom 15px
        +below(1151px)
            br
                display none
    &__input
        margin-bottom 10px
    &__button
        margin-bottom 20px

    &__text
        color #848484
        font()
