.button-white
    display inline-block
    height 40px
    background-color white
    border none
    outline none
    color #1a4382
    font(Extra)
    font-size 15px
    letter-spacing .025em
    line-height 42px
    text-transform uppercase
    text-decoration none
    text-align center
    padding 0 20px
    transition all .3s ease
    &--big
        color #231f20
        height 50px
        line-height 52px
    &:hover
        color @color
        text-decoration none
        +above(desktop)
            color white
            background-color #faa927

