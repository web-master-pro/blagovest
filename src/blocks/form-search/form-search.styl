.form-search
    width 100%
    max-width 770px

    &__input
        display block
        width 100%
        height 50px
        border-bottom 2px solid #faa926
        background-color transparent
        border none
        outline none
        color white
        font(Bold)
        font-size 24px
        line-height 50px
        padding 0
        margin 0
        +above(1152px)
            font(Light)
            font-size 60px
            height 120px
            line-height 120px
            text-align center

        +below(1151px)
            &::-webkit-input-placeholder
                color #fff
                opacity 1
            &::-moz-placeholder
                color #fff
                opacity 1
            &:-moz-placeholder
                color #fff
                opacity 1
            &:-ms-input-placeholder
                color #fff
                opacity 1
            &:input-placeholder
                color #fff
                opacity 1

        &:-webkit-autofill
            -webkit-box-shadow inset 0 0 0 100px rgba(35,31,32,1) !important
            background-color #231f20 !important
            -webkit-text-fill-color #fff !important
            color #fff !important



