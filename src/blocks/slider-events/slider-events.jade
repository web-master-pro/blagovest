mixin slider-events()
    .slider-events&attributes(attributes)
        .slider-events__nav
            .slider-events__nav-in
                .slider-events__prev
                    button.button-event.button-event--prev.slider-events__button-prev
                        span.button-event__icon
                        span.button-event__caption Предыдущий день
                        span.button-event__date 22 июля, четверг
                .slider-events__current
                    .slider-events__date 23 июля, пятница
                .slider-events__next
                    button.button-event.button-event--next.slider-events__button-next
                        span.button-event__icon
                        span.button-event__caption Следующий день
                        span.button-event__date 24 июля, суббота

        .slider-events__slider(data-start-index="1")
            // data-start-index - здесь указываем индекс (начинаются с нуля) слайда, который будет показываться первым.
            .slider-events__slide(data-date="22 июля, четверг")
                // data-date - из этого атрибута (должен быть в каждом слайде) скрипт подставляет даты в навигацию слайдера
                .event
                    img(src="assets/img/events/event-2.jpg" alt="").event__photo
                    time(datetime="2016-07-23 19:00").event__time 19:00
                    p.event__text Общецерковный Вечер Хвалы и&nbsp;Поклонения
