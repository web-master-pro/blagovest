    &--framed
        border 10px solid rgba(255,255,255,.03)
        +above(1152px)
            border-width 20px
    &--framed-white
        border 10px solid #fff
        +above(1152px)
            border-width 20px
    &--cover
        +above(1152px)
            width 100%
            height 100%

    &__poster
        display block
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        z-index 2
        background-position center center
        background-repeat no-repeat
        background-size cover
        &::before
            content ""
            display block
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            background-color rgba(35,31,32,.5)
            background-image embedurl("../../svg/video-play.svg", "")
            background-position 50% 50%
            background-repeat no-repeat
            background-size 72px 72px
            z-index 5
            transition background-color .3s ease
        &:hover
            &::before
                background-color rgba(35,31,32,.6)
        ^[0].on &
            display none

    &__video

        max-width 100%
        height auto
        ^[0]--cover &
            width 100%
            height 100%

