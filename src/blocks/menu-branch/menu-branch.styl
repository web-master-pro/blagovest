.menu-branch
    display inline-block
    position relative
    width 100%
    +above(375px)
        max-width 270px
        &--small
            max-width 170px

    &__button
        display block
        width 100%
        height 40px
        background-color #1a4382
        border none
        outline none
        color white
        font(Extra)
        font-size 15px
        letter-spacing .025em
        line-height 42px
        text-transform uppercase
        text-align left
        text-decoration none
        padding 0
        position relative
        cursor pointer
        &::before
        &::after
            content ""
            display block
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            transition opacity .3s ease
        &::before
            opacity 1
            background-image linear-gradient(135deg, #387fc0 0%, #1f4388 100%)
        &::after
            opacity 0
            background-image linear-gradient(135deg, #14beeb 0%, #1c77bc 100%)
        &:hover
        ^[0].on &
            color white
            text-decoration none
            &::before
                opacity 0
            &::after
                opacity 1
        ^[0]--small &
            height 35px
            line-height 37px
            font-size 12px
            padding 0

    &__caption
        display block
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        text-align left
        padding 0 30px 0 20px
        position relative
        z-index 2
        &::after
            content ""
            display block
            width 7px
            height 7px
            border-right 2px solid #fff
            border-bottom 2px solid #fff
            transform rotate(45deg)
            position absolute
            top 15px
            right 15px
            ^[0]--small &
                top 12px
        ^[0].on &
            &::after
                transform rotate(-135deg) translate(-2px,-3px)

    &__caption-ext
        ^[0]--small &
            display none

    &__menu
        display none
        width 100%
        list-style none
        padding 0
        margin 0
        position absolute
        top 40px
        z-index 100
        background-color white
        box-shadow 0 1px 35px rgba(2, 2, 2, 0.2)


        ^[0]--small &
            top 35px
    &__item
        display block
        width 100%
        margin 0
        padding 0
        text-align left
    &__link
        display block
        width 100%
        height 40px
        color #231f20
        font(Extra)
        font-size 15px
        letter-spacing .025em
        line-height 40px
        text-transform uppercase
        text-decoration none
        padding 0 20px
        &:hover
            color #faa927
            background-color #f7f7f7
            text-decoration none
        ^[0]--small &
            height 35px
            font-size 12px
            line-height 35px

    &__img
        display block
        width 100%
        height auto
        +above(1152px)
            display none


