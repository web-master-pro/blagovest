.button-lang
    display none
    color white
    font(Extra)
    font-size 15px
    letter-spacing .025em
    line-height 22px
    text-transform uppercase
    text-decoration none
    transition color .3s ease
    +above(1152px)
        display inline-block
    &::before
        content ""
        display block
        width 1px
        height 50px
        opacity 0.12
        background-color white
        position absolute
        left -30px
        top -15px
    &:hover
        color @color
        text-decoration none
        +above(desktop)
            color $color_hover

