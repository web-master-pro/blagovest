.choose-category
    display block
    width 100%

    &__in
        container(1210px)
        padding 0
        +above(480px)
            padding 20px
        +above(1152px)
            padding 70px 20px 60px
        +below(1151px)
            text-align center

    &__number
        display none
        +above(480px)
            display block
            color #faa926
            font(PTSans)
            font-size 15px
            line-height 20px
            margin 0 0 20px

    &__title
        display none
        vertical-align top
        color #231f20
        font(Extra)
        font-size 30px
        line-height 35px
        text-align left
        margin 0 30px 0 0
        +above(1152px)
            display inline-block
            font-size 42px
            line-height 40px

    &__menu
        vertical-align top
