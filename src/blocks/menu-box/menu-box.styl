.menu-box
    list-style none
    padding 0
    margin 0

    &__item
        color #231f20
        font(Extra)
        font-size 14px
        letter-spacing .025em
        line-height 20px
        padding 0
        margin 0 0 25px

    &__link
        color #231f20
        text-decoration none
        text-transform uppercase
        transition color .3s ease
        &:hover
            color @color
            text-decoration none
            +above(desktop)
                color $color_hover


.menu-box-sub
    list-style none
    padding 20px 0 0
    margin 0

    &__item
        color #231f20
        font()
        font-size 15px
        font-weight 400
        line-height 25px
        padding 0 0 8px
        margin 0

    &__link
        color #231f20
        text-decoration none
        transition color .3s ease
        &:hover
            color $color_hover
            text-decoration none
