.slider-header
    display block

    &__slider
        width 100%
        position absolute
        top 0
        left 0
        right 0
        bottom 0

    &__in
        container(1210px)
        padding 20px 20px 20px
        text-align center
        +above(1152px)
            padding 360px 20px 20px


    &__slide
        display block
        width 100%
        height 540px
        background-repeat no-repeat
        background-position center center
        background-size cover
        +above(1152px)
            height 740px
        +below(1151px)
            display flex
            flex-flow row nowrap
            justify-content center
            align-items center

    &__nav
        display block
        width 100%
        position absolute
        bottom 10px
        height auto
        z-index 100
        +above(1152px)
            bottom 20px

    &__dots
        position relative
        display block
        list-style none
        padding 20px 50px
        margin 0
        font-size 0
        text-align center
        +above(1152px)
            padding 20px 45px

    &__dot
        display inline-block
        vertical-align middle
        width 6px
        height 6px
        background-color #fff
        border-radius 50%
        margin 15px
        cursor pointer
        transition background-color .3s ease
        &:hover
        &.active
            background-color #f3a62d

    &__next
    &__prev
        display block
        position absolute
        top 50%
        margin-top -23px
        z-index 150
        +above(1152px)
            display none
    &__prev
        left 20px
    &__next
        right 20px

    &__title
        color white
        font(Light)
        font-size 28px
        line-height 35px
        text-align center
        margin 0 0 30px
        +above(1152px)
            font-size 36px
            line-height 55px


