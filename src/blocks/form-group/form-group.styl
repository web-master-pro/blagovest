.form-group
    display flex
    flex-flow row wrap
    justify-content space-around
    width 100%
    max-width 1170px
    background-color #fff
    padding 35px 20px 20px
    margin-left auto
    margin-right auto
    +above(1152px)
        padding 65px 75px 50px
        justify-content space-between


    &__title
        flex 0 0 100%
        color #231f20
        font(Extra)
        font-size 30px
        line-height 35px
        text-align center
        margin 0 0 35px
        +above(1152px)
            font-size 42px
            line-height 55px

    &__info
        flex 0 1 700px
        margin-bottom 30px
        +above(1152px)
            flex 0 0 500px
            margin-bottom 0

    &__form
        flex 0 1 430px

    &__text
        color #231f20
        font()
        font-size 16px
        line-height 25px
        margin 0 0 25px
        &:last-child
            margin 0
        +above(1152px)
            margin 0 0 35px

    &__input
        margin-bottom 10px
    &__select
        margin-bottom 10px


