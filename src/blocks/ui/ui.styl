    cursor pointer
    width 100%

    &__select
        width 100%
        height 50px
        padding 0 45px 0 20px
        background-color #f7f7f7
        box-shadow inset 2px 2px 0 #ededed
        border none
        color #bcbcbc
        font()
        font-size 16px
        line-height 50px
        padding 0 20px
        margin 0
        position relative
        transition all .3s ease
        &:hover
        &:active
        ^[0].focused &
            background-color #f2f2f2
            color #231f20
        +above(1152px)
            font-size 18px
        &::after
            content ""
            display block
            width 7px
            height 7px
            border-right 2px solid #848484
            border-bottom 2px solid #848484
            transform rotate(45deg)
            position absolute
            top 22px
            right 20px
        .filter-media &
            +below(1151px)
                background-color #fff

    &__select-text
