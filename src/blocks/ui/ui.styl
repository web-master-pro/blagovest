.checkbox
    &__checkbox
        display inline-block
        padding 0
        margin 0
        opacity 0

    &__label
        display block
        color white
        font()
        font-size 14px
        line-height 20px
        margin 0
        padding 0px 0 0 40px
        position relative
        cursor pointer
        &::before
            content ""
            display block
            width 24px
            height 24px
            border 2px solid #e9e9e9
            background-color transparent
            position absolute
            top 0
            left 0
        &::after
            content ""
            display none
            width 13px
            height 5px
            border-left 2px solid white
            border-bottom 2px solid white
            position absolute
            top 8px
            left 6px
            transform rotate(-45deg)

        a
            color white
            text-decoration none
            &:hover
                text-decoration underline
        +above(1152px)
            padding-top 3px
            color #231f20
            a
                color #1a4382

    &__checkbox:checked + &__label
        &::before
            background-color #faa926
            border-color #faa926
        &::after
            display block

.button-submit
    display inline-block
    height 50px
    background-color #1a4382
    border none
    outline none
    color white
    font(Extra)
    font-size 15px
    letter-spacing .025em
    line-height 52px
    text-transform uppercase
    text-align center
    text-decoration none
    padding 0 20px
    position relative
    cursor pointer
    &--wide
        display block
        width 100%
    span
        position relative
        z-index 2
    &::before
    &::after
        content ""
        display block
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        transition opacity .3s ease
    &::before
        opacity 1
        background-image linear-gradient(135deg, #387fc0 0%, #1f4388 100%)
    &::after
        opacity 0
        background-image linear-gradient(135deg, #14beeb 0%, #1c77bc 100%)
    &:hover
        color white
        text-decoration none
        &::before
            opacity 0
        &::after
            opacity 1

    .form-donate &
        background-color #f3a62d
        +above(1152px)
            height 70px
            line-height 72px
        &::before
            background-image linear-gradient(135deg, #faa926 0%, #e38225 100%)
        &::after
            background-image linear-gradient(135deg, #ef9523 0%, #e22527 100%)



.jq-selectbox
