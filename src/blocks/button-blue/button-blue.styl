.button-blue
    display inline-block
    height 40px
    background-color #1a4382
    border none
    outline none
    color white
    font(Extra)
    font-size 15px
    letter-spacing .025em
    line-height 42px
    text-transform uppercase
    text-align center
    text-decoration none
    padding 0 20px
    position relative
    cursor pointer
    span
        position relative
        z-index 2
    &::before
    &::after
        content ""
        display block
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        transition opacity .3s ease
    &::before
        opacity 1
        background-image linear-gradient(135deg, #387fc0 0%, #1f4388 100%)
    &::after
        opacity 0
        background-image linear-gradient(135deg, #14beeb 0%, #1c77bc 100%)
    &:hover
        color white
        text-decoration none
        &::before
            opacity 0
        &::after
            opacity 1
    &--small
        height 35px
        line-height 37px
        font-size 12px
        padding 0 15px

