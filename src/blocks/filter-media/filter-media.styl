.filter-media
    display block
    width 100%
    background-color #fff
    padding 30px 20px
    +above(1152px)
        padding 45px 20px


    &__button
        display block
        width 100%
        height 50px
        border 2px solid #ddd
        outline none
        background-color #fff
        color #231f20
        font(Extra)
        font-size 15px
        line-height 50px
        text-align center
        text-transform uppercase
        cursor pointer
        +above(1152px)
            display none

        &.on
            color white
            background-color #878787
            border-color #878787

    &__button-show
    &__button-hide
        padding-left 35px
        background-position 0 45%
        background-repeat no-repeat
        background-size 20px 14px
    &__button-show
        display inline-block
        background-image embedurl("../../svg/filter-black.svg", "")
        ^[0]__button.on &
            display none
    &__button-hide
        display none
        background-image embedurl("../../svg/filter-white.svg", "")
        ^[0]__button.on &
            display inline-block

    &__container
        container(1170px)
        display none
        &.on
            +below(1151px)
                display flex
                flex-flow row wrap
                justify-content space-around
                background-color #f4f4f4
                border 2px solid #ddd
                border-top none
                padding 20px 20px 10px

        +above(1152px)
            display flex
            flex-wrap nowrap
            justify-content space-between
            border none
            background-color #fff
            padding 0

    &__select-group
        display block
        width 100%
        margin 0 auto 20px
        +above(480px)
            display inline-block
            width 260px
            margin 10px 20px
        +above(1152px)
            flex 0 0 auto
            display inline-flex
            flex-flow row nowrap
            width auto
            margin 0

    &__label
        display none
        color #231f20
        font(Bold)
        font-size 15px
        line-height 44px
        margin 0
        +above(1152px)
            display inline-block
            margin-right 30px

    .jq-selectbox
        +above(1152px)
            display inline-block
            min-width 260px

